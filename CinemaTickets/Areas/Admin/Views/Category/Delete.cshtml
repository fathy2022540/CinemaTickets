@model CinemaTickets.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

<div class="container my-5">
    <div class="card shadow-lg border-0 rounded-4 mx-auto" style="max-width: 700px;">
        <div class="card-header bg-danger text-white text-center rounded-top-4 py-3">
            <h2 class="mb-0">
                <i class="bi bi-trash3 me-2"></i> Delete Category
            </h2>
        </div>

        <div class="card-body bg-light p-4 text-center">
            <div class="alert alert-warning shadow-sm rounded mb-4">
                <i class="bi bi-exclamation-triangle-fill text-warning me-2"></i>
                <strong>Are you sure you want to delete this category?</strong>
            </div>

            <dl class="row text-start mb-4">
                <dt class="col-sm-3 fw-semibold">
                    <i class="bi bi-tag me-1 text-danger"></i> Name:
                </dt>
                <dd class="col-sm-9">@Model.Name</dd>
            </dl>

            <form asp-action="Delete" method="post" class="mt-4">
                <input type="hidden" asp-for="Id" />

                <button type="submit" class="btn btn-danger px-4 py-2 rounded-pill shadow-sm">
                    <i class="bi bi-trash-fill me-1"></i> Delete
                </button>

                <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2 rounded-pill ms-2 shadow-sm">
                    <i class="bi bi-x-circle me-1"></i> Cancel
                </a>
            </form>
        </div>
    </div>
</div>
